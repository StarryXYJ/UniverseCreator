    <Style Selector="Button.Proj">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Background" Value="{DynamicResource ButtonPrimaryBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonPrimaryForeground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimaryBorder}" />
    </Style>

    <Style Selector="Button.Proj:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ButtonHoverPrimaryBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ButtonPrimaryBorder}" />
        <Setter Property="Foreground" Value="{DynamicResource ButtonHoverPrimaryForeground}" />
    </Style>


    <Style Selector="Button.transparent">
        <Setter Property="Background" Value="transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    <Style Selector="Button.transparent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
    <Style Selector="Button.Proj">
        <Setter Property="RenderTransform" Value="scale(1)" />
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.3" />
                <BrushTransition Property="Foreground" Duration="0:0:0.3" />
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2" />
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.Proj:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.05)" />
    </Style>


